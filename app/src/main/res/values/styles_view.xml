<?xml version="1.0" encoding="utf-8"?>
<resources>
    <style name="MyPy.CardStyle" parent="Widget.MaterialComponents.CardView">
        <item name="strokeWidth">3dp</item>
        <item name="strokeColor">?attr/accentColor</item>
        <item name="cardBackgroundColor">?attr/colorPrimary</item>
        <item name="shapeAppearance">@style/MyPy.MediumComponent</item>
    </style>
    <style name="MyPy.MediumComponent" parent="ShapeAppearance.MaterialComponents.MediumComponent">
        <item name="cornerFamily">rounded</item>
        <item name="cornerSize">8dp</item>
    </style>
    <style name="MyPy.SmallComponent" parent="ShapeAppearance.MaterialComponents.SmallComponent">
        <item name="cornerFamily">rounded</item>
        <item name="cornerSize">8dp</item>
    </style>
    <style name="MyPy.TextInput.Code" parent="Widget.MaterialComponents.TextInputLayout.OutlinedBox">
        <item name="iconGravity">top</item>
        <item name="boxStrokeWidth">0dp</item>
        <item name="textFillColor">?attr/defaultTextColor</item>
        <item name="android:minLines">4</item>
        <item name="singleLine">false</item>
        <item name="android:padding">0dp</item>
        <item name="android:layout_marginBottom">5dp</item>
    </style>
    <style name="MyPy.EditTextStyle" parent="@style/Widget.MaterialComponents.TextInputEditText.OutlinedBox">
        <item name="android:textColor">?attr/defaultTextColor</item>
        <item name="android:padding">0dp</item>
    </style>

</resources>